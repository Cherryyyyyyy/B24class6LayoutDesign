<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/textView_abid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_orange_dark"
        android:text="abid"
        android:textColor="@android:color/white"
        android:textSize="5sp" />

    <TextView
        android:id="@+id/textView_cherry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/textView_abid"
        android:background="@android:color/holo_orange_dark"
        android:text="cherry"
        android:textColor="@android:color/white"
        android:textSize="5sp" />

    <TextView
        android:id="@+id/textView_jamila"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@android:color/holo_orange_dark"
        android:text="jamila"
        android:textColor="@android:color/white"
        android:textSize="5sp" />

    <TextView
        android:id="@+id/textView_afra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textView_jamila"
        android:background="@android:color/holo_orange_dark"
        android:text="afra"
        android:textColor="@android:color/white"
        android:textSize="5sp" />

    <TextView
        android:id="@+id/textView_anannya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@android:color/holo_orange_dark"
        android:text="anannya"
        android:textColor="@android:color/white"
        android:textSize="5sp" />

    <TextView
        android:id="@+id/textView_ranjit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/holo_orange_dark"
        android:text="ranjit"
        android:textColor="@android:color/white"
        android:textSize="5sp" />

    <TextView
        android:id="@+id/textView_sabuj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/holo_orange_dark"
        android:text="sabuj"
        android:textColor="@android:color/white"
        android:textSize="5sp" />

    <TextView
        android:id="@+id/textView_sumaiya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView_sabuj"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_orange_dark"
        android:text="sumaiya"
        android:textColor="@android:color/white"
        android:textSize="5sp" />

</RelativeLayout>